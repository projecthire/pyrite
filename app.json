{
  "env": {
    "RAILS_ENV": "staging",
    "RACK_ENV": "staging",
    "LANG": "en_US.UTF-8",
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SMTP_ADDRESS": {
      "required": true
    },
    "SMTP_DOMAIN": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "HOST": {
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "bundle exec rake db:setup"
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "papertrail",
    "sendgrid:starter"
  ]
}
