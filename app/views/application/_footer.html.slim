          li
            = link_to "PH Case", root_path
          li
            = link_to "PH Idea Forum", root_path
          li
            = link_to "Get Verified", root_path
          li
            = link_to "Get Hired", root_path
      .col-sm-3.footer-row
        h4.text-uppercase other
